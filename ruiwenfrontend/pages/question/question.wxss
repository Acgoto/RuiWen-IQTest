page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: linear-gradient(rgba(0, 174, 255, 0.534), rgba(255, 166, 0, 0.247));
}

.content {
  width: 100%;
  height: 100%;
}

.content .progress-bar {
  padding-left: 10px;
  padding-right: 10px;
}

.context {
  font-size: 30rpx;
  margin-top: -18px;
  margin-left: 15rpx;
}


/*题目所处的view的格式*/
.question {
  display: flex;
  width: 98%;
  height: 98%;
  justify-content: space-between;
}

/*题目截图格式*/
.pic {
  width: 96%;
  height: 96%;
  padding: 2%;
  margin: 0rpx 10rpx;
  border-radius: 10rpx;
  justify-content: space-between;
}

/*答案选项截图*/
.answerPic {
  height: 120rpx;
  width: 200rpx;
  background-color: rgb(254, 254, 254);
  border-radius: 10px;
  border: solid 2px #E6E6FA;
  /* justify-content: space-between; */
}

/*单选按钮所处的view格式*/
.radio {
  width: 45%;
  height: 100%;
  margin: 4rpx;
  display: flex;
}

.radio-group {
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-items: center;
}

.but {
  margin: 3% 10% 0% 10%;
  box-shadow: 0px 2px 4px 4px #12f0e598;
  border-radius: 20px;
  background-color: rgba(255, 230, 118, 0.185);
  color: rgba(17, 17, 17, 0.664);
}

.question_image_container {
  height: 30%;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.ans_container {
  width: 100%;
  height: 33%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  padding: 5% 5% 0% 5%;
}