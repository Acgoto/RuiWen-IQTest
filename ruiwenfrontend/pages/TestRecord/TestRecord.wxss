page {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  background: linear-gradient(rgba(69, 28, 252, 0.534), rgba(0, 255, 255, 0.247));
}

.user_info {
  width: 100%;
  height: 100%;
  left: 50%;
  top: 20%;
  position: absolute;
  margin-top: -140px;
  margin-left: -140px;
  display: flex;
  text-align: center;
  flex-direction: column;
}

.user_avatar {
  width: 80px;
  height: 80px;
  margin-left: 100px;
  margin-top: 100px;
  border-radius: 50%;
}

.user_nickname {
  width: 100px;
  height: 40px;
  margin-left: 90px;
  color: white;
  text-align: center;
}

.record_container {
  width: 280px;
  height: 400px;
  display: flex;
  border-radius: 5%;
  flex-direction: column;
}

.record_item {
  border-radius: 5px;
  margin-top: 5px;
  background: rgba(209, 251, 252, 0.329);
  text-align: left;
}

.context {
  width: 100px;
  height: 40px;
  margin-left: 90px;
  text-align: center;
  color: white;
}

.record_item text {
  display: block;
  color: #555;
  margin: 0 10px;
}